{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "console": true,
    "require": true,
    "process": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": "off" // Exemplo de regra para permitir o uso de console
    // outras regras do ESLint podem ser configuradas aqui
  }
}
